        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body class="login-page bg-body-secondary">
    <div class="login-box">
        <div class="login-logo">
            <a href="#"><b>SGAHS</b></a>
        </div>
        <!-- /.login-logo -->
        <div class="card">
            <div class="card-body login-card-body">
                <p class="login-box-msg">Inicie Sesion</p>
                {% block body %}{% endblock %}
                <div class="social-auth-links text-center mb-3 d-grid gap-2">
                    <p>- O -</p>
                    {#<a href="#" class="btn btn-primary">
                        <i class="bi bi-facebook me-2"></i> Ingrese Usando
                    </a>#}
                    <a href="#" class="btn btn-danger">
                        <i class="bi bi-google me-2"></i> Ingrese usando Google
                    </a>
                </div>
                <!-- /.social-auth-links -->
                <p class="mb-1"><a href="#">Olvide mi Contraseña</a></p>
                <p class="mb-0">
                    <a href="{{ path('app_register') }}" class="text-center"> Si no tiene cuenta registrese </a>
                </p>
            </div>
            <!-- /.login-card-body -->
        </div>
    </div>
    <!-- /.login-box -->
