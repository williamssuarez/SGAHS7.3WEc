{{ form_start(form) }}
    <div class="card-body">
        <div class="mb-3">
            {{form_label( form.nombre ) }}
            {{form_widget( form.nombre ) }}
        </div>
        <div class="mb-3">
            {{form_label( form.poblacion ) }}
            {{form_widget( form.poblacion ) }}
        </div>
    </div>

    <div class="card-footer">
        <div class="row">
            <div class="col-md-12">
                <div class="d-flex justify-content-between">
                    <a class="btn btn-primary" href="{{ path('app_ciudad_index') }}">
                        <i class="bi bi-arrow-left"></i> Volver
                    </a>

                    <div class="d-flex">
                        <button class="btn btn-success">
                            {{ button_label|default('Guardar') }}
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
{{ form_end(form) }}
