{{ form_start(form) }}
<div class="card-body">
    <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="tab1" data-bs-toggle="tab" data-bs-target="#tab1-pane" type="button" role="tab" aria-controls="tab1-pane" aria-selected="true">
                Datos Generales
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="tab2" data-bs-toggle="tab" data-bs-target="#tab2-pane" type="button" role="tab" aria-controls="tab2-pane" aria-selected="false">
                Contactos
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="tab3" data-bs-toggle="tab" data-bs-target="#tab3-pane" type="button" role="tab" aria-controls="tab3-pane" aria-selected="false">
                Relaciones
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="tab4" data-bs-toggle="tab" data-bs-target="#tab4-pane" type="button" role="tab" aria-controls="tab4-pane" aria-selected="false">
                Condiciones
            </button>
        </li>
    </ul>
    <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="tab1-pane" role="tabpanel" aria-labelledby="tab1" tabindex="0">
            <h3>Informacion Basica</h3>
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        {{form_label( form.nombre ) }}
                        {{form_widget( form.nombre ) }}
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        {{form_label( form.apellido ) }}
                        {{form_widget( form.apellido ) }}
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        {{form_label( form.cedula ) }}
                        {{form_widget( form.cedula ) }}
                    </div>
                </div>
            </div>
        </div>
        <div class="tab-pane fade" id="tab2-pane" role="tabpanel" aria-labelledby="tab2" tabindex="0">
            <h3>Contactos y Direcciones</h3>
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        {{form_label( form.direccion ) }}
                        {{form_widget( form.direccion ) }}
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        {{form_label( form.telefono ) }}
                        {{form_widget( form.telefono ) }}
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        {{form_label( form.correo ) }}
                        {{form_widget( form.correo ) }}
                    </div>
                </div>
            </div>
        </div>
        <div class="tab-pane fade" id="tab3-pane" role="tabpanel" aria-labelledby="tab3" tabindex="0">
            <h3>Relaciones</h3>
            {#form va aca#}
        </div>
        <div class="tab-pane fade" id="tab4-pane" role="tabpanel" aria-labelledby="tab4" tabindex="0">
            <h3>Condiciones</h3>
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        {{form_label( form.enfermedades ) }}
                        {{form_widget( form.enfermedades ) }}
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        {{form_label( form.alergias ) }}
                        {{form_widget( form.alergias ) }}
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        {{form_label( form.discapacidades ) }}
                        {{form_widget( form.discapacidades ) }}
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        {{form_label( form.tratamientos ) }}
                        {{form_widget( form.tratamientos ) }}
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        {{form_label( form.hasMarcaPaso ) }}
                        {{form_widget( form.hasMarcaPaso ) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="card-footer">
    <div class="row">
        <div class="col-md-12">
            <div class="btn-toolbar">
                <button class="btn btn-success pull-left">{{ button_label|default('Guardar') }}</button>
                <a class="pull-right btn btn-primary" href="{{ path('app_paciente_index') }}">
                    <i class="bi bi-arrow-left"></i> Volver
                </a>
            </div>
        </div>
    </div>
</div>
{{ form_end(form) }}
