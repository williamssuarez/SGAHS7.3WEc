{% extends 'base.html.twig' %}

{% block title %}Alergias index{% endblock %}

{% block body %}
    <h1>Alergias index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Severidad</th>
                <th>Observaciones</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for alergia in alergias %}
            <tr>
                <td>{{ alergia.id }}</td>
                <td>{{ alergia.severidad }}</td>
                <td>{{ alergia.observaciones }}</td>
                <td>
                    <a href="{{ path('app_alergias_show', {'id': alergia.id}) }}">show</a>
                    <a href="{{ path('app_alergias_edit', {'id': alergia.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_alergias_new') }}">Create new</a>
{% endblock %}
