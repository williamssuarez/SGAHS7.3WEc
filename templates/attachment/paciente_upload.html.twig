{% extends 'base.html.twig' %}

{% block title %}Subir Archivo{% endblock %}

{% block titlewrap %}
    Subir archivo para {{ paciente.nombre|title }} {{ paciente.apellido|title }}
{% endblock %}

{% block breadcrumb %}
    <li class="breadcrumb-item"><a href="{{ path('app_paciente_index') }}">Pacientes</a></li>
    <li class="breadcrumb-item"><a href="{{ path('app_paciente_show', {'id': paciente.id}) }}">Detalles Paciente</a></li>
    <li class="breadcrumb-item active" aria-current="page">Subir Archivo</li>
{% endblock %}

{% block body %}
    {{ form_start(form) }}

    {{ include('base/_form_error_messages.html.twig') }}
        <div class="col-md-6">
            <div class="card card-primary card-outline mb-4">
                <div class="card-body">
                    <div class="mb-3">
                        <div class="input-group mb-3">
                            {{form_widget( form.file ) }}
                            {{form_label( form.file ) }}
                        </div>
                        <small>Archivos <strong>JPG, PNG y PDF</strong>, tamaño máximo <strong>2mb</strong></small>
                        <small class="text-danger" style="font-weight: bold">&nbsp;(Requerido)</small>
                        <p class="text-justify" style="font-size: 10pt; font-style: italic;">Seleccione el archivo que desea subir, puede ser una cedula, una partida de nacimiento o cualquier otro archivo que usted crea relevante subir para este paciente</p>
                    </div>
                    <br>
                    <div class="mb-3">
                        {{form_label( form.nombre ) }}
                        {{form_widget( form.nombre ) }}
                        <p class="text-justify" style="font-size: 10pt; font-style: italic;">Escriba el nombre con el que desea guardar el archivo, Si no escribe nada se tomara por defecto el nombre actual del archivo (Opcional)</p>
                    </div>
                </div>

                <div class="card-footer">
                    <div class="row">
                        <div class="col-md-12">
                            <div class="d-flex justify-content-between">
                                <a class="btn btn-primary" href="{{ path('app_paciente_show', {'id': paciente.id}) }}">
                                    <i class="bi bi-arrow-left"></i> Volver
                                </a>

                                <div class="d-flex">
                                    <button class="btn btn-success">
                                        {{ button_label|default('Guardar') }}
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    {{ form_end(form) }}
{% endblock %}

